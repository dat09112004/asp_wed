@model Order
<div class="container">
    <form method="post" asp-action="Upsert">
        <div class="form-group">
            <label asp-for="Order_date">Ngày đặt hàng</label>
            <input asp-for="Order_date" type="text" class="form-control" />
            <span asp-validation-for="Order_date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="total_amount">Giá tiền</label>
            <input asp-for="total_amount" type="text" class="form-control" />
            <span asp-validation-for="total_amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplierId">Nhà cung cấp</label>
            <select asp-for="SupplierId" asp-items="@ViewBag.DSTheLoai" class="form-control">
                <option disabled>Chọn Thể Loại</option>
            </select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Tạo Mới" : "Cập Nhật")</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>

    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

